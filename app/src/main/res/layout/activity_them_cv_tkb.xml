<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Tạo sự kiện công việc"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:id="@+id/event_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:hint="Tên công việc"
            android:inputType="textCapSentences"
            android:maxLength="180"/>
        <EditText
            android:id="@+id/event_location"
            android:layout_below="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Địa chỉ"
            android:inputType="textCapSentences"
            android:layout_marginTop="10dp"
            android:maxLength="180"/>
        <EditText
            android:id="@+id/event_description"
            android:layout_below="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Mô tả"
            android:inputType="textCapSentences|textMultiLine"
            android:layout_marginTop="10dp"
            android:maxLength="180"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tbackground">
        <TextView
            android:layout_margin="20dp"
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/date"
            android:padding="10dp"
            />
        <TextView
            android:layout_margin="20dp"
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/time"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/event_timeend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:text="@string/time_end"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/event_reminder_image"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell_vector"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_reminder_image"
            android:textSize="17dp"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:text="@string/reminder"
            android:layout_marginStart="4dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/event_reminder"
            />
    </RelativeLayout>

</LinearLayout>