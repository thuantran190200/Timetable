<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quenmatkhau_mkmoi"
    android:background="@color/white"
    android:paddingBottom="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/backnew_screen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="backnew_screen"
            android:src="@drawable/ic_keyboard_backspace"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/passwordchange" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/bungee"
            android:text="Thay đổi mật khẩu mới"
            android:textSize="25dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/matkhaumoi"
            android:layout_width="350dp"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:hint="Nhập mật khẩu mới"
            android:textColorHint="@color/black"
            app:startIconDrawable="@drawable/ic_https"
            app:startIconTint="@color/black"
            android:layout_marginBottom="10dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            app:boxStrokeWidthFocused="2dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nhapmkmoi"
            android:layout_width="350dp"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_marginLeft="26dp"
            android:hint="Nhập lại mật khẩu"
            app:startIconDrawable="@drawable/ic_https"
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            app:boxStrokeWidthFocused="2dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/thaydoi_screen"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/yellow"
            android:onClick="btn_setNewPassword"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/black" />


    </LinearLayout>

</ScrollView>